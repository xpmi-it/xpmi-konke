<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_company_form_konke_email_layout"
            model="ir.ui.view">
        <field name="name">res.company.form.konke.email.layout</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='general_info']/group"
                   position="inside">
                <group string="Email Layout">
                    <field name="hide_email_layout_parts"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.act_window" id="import_order_action_wizard">
        <field name="name">Import Connector Orders</field>
        <field name="binding_model_id" ref="da_connector_sale_order.model_connector_order"/>
        <field name="res_model">wizard.order.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('da_connector_base.group_connector_master')])]"/>
    </record>

    <record id="wizard_order_import_form_view" model="ir.ui.view">
        <field name="name">Wizard Order Import</field>
        <field name="model">wizard.order.import</field>
        <field name="arch" type="xml">
            <form name="MM Orders Import ">
                <footer>
                    <button name="import_sale_order" string="Import Sale Order" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="connector_carrier_main" name="Carrier" parent="da_connector_base.connector_root" sequence="2"
              groups="da_connector_base.group_connector_master,da_connector_base.group_connector_user"/>

    <record id="action_connector_carrier" model="ir.actions.act_window">
        <field name="name">Carrier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">connector.carrier</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="connector_carrier" name="Carrier" parent="da_connector_base.connector_setting_main"
              action="action_connector_carrier" sequence="1"
              groups="da_connector_base.group_connector_master,da_connector_base.group_connector_user"/>

    <!--Form-->
    <record model="ir.ui.view" id="connector_carrier_form_view">
        <field name="name">connector.carrier.form.view</field>
        <field name="model">connector.carrier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="marketplace"/>
                            <field name="odoo_carrier_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree-->
    <record model="ir.ui.view" id="connector_carrier_tree_view">
        <field name="name">connector.carrier.tree.view</field>
        <field name="model">connector.carrier</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="marketplace"/>
                <field name="odoo_carrier_id"/>
            </list>
        </field>
    </record>

    <!--Search-->
    <record model="ir.ui.view" id="connector_carrier_search_view">
        <field name="name">connector.carrier.search.view</field>
        <field name="model">connector.carrier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="marketplace"/>
                <field name="odoo_carrier_id"/>
            </search>
        </field>
    </record>

</odoo>

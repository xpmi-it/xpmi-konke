<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.act_window" id="accept_orders_mirakl_wizard">
        <field name="name">Accept Orders Mirakl</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="res_model">accept.order.mirakl.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
<!--        <field name="groups_id" eval="[(6, 0, [ref('group_transport_carrier_base')])]"/>-->
    </record>

    <record id="accept_orders_mirakl_wizard_view" model="ir.ui.view">
        <field name="name">Accept Orders Mirakl</field>
        <field name="model">accept.order.mirakl.wizard</field>
        <field name="arch" type="xml">
            <form name="Accept Orders Mirakl">
                <footer>
                    <button name="accept_orders_mirakl" string="Accept Orders Mirakl" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

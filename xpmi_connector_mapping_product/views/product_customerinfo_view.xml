<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_customerinfo_mapping_form_view">
        <field name="name">product.customerinfo.mapping.form.view</field>
        <field name="model">product.customerinfo</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_id" domain="[]"/>
                        <field name="connector_setting_id"/>
                        <field name="product_code" string="Product Code"/>
                    </group>
                    <group>
                        <field name="product_name" string="Product Name"/>
                        <field name="external_sku"/>
                    </group>
                </group>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="product_customerinfo_mapping_form_view_inherit">
        <field name="name">product.customerinfo.mapping.form.view</field>
        <field name="model">product.customerinfo</field>
        <field name="inherit_id" ref="product_supplierinfo_for_customer.product_customerinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group/field[@name='partner_id']" position="attributes">
                <attribute name="required">not connector_setting_id</attribute>
            </xpath>
            <xpath expr="//form/group/group/field[@name='product_id']" position="before">
                <field name="connector_setting_id"/>
            </xpath>
            <xpath expr="//form/group/group/field[@name='product_code']" position="after">
                <field name="external_sku"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_customerinfo_mapping_tree_view_inherit">
        <field name="name">product.customerinfo.mapping.tree.view</field>
        <field name="model">product.customerinfo</field>
        <field name="inherit_id" ref="product_supplierinfo_for_customer.product_customerinfo_tree_view"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="connector_setting_id"/>
            </field>
            <field name="product_code" position="after">
                <field name="external_sku"/>
            </field>
        </field>
    </record>

    <record id="action_product_mapping" model="ir.actions.act_window">
        <field name="name">Product Mapping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.customerinfo</field>
        <field name="view_mode">list,form</field>
        <field
            name="view_ids"
            eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('product_supplierinfo_for_customer.product_customerinfo_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('product_customerinfo_mapping_form_view')})]"
        />
    </record>

    <menuitem id="product_mapping" name="Product Mapping" parent="da_connector_base.connector_setting_main"
              action="action_product_mapping" sequence="12"
              groups="da_connector_base.group_connector_master,da_connector_base.group_connector_user"/>

</odoo>
